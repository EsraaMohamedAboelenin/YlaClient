<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
     android:orientation="vertical"

    android:id="@+id/rel_loder">






<android.support.v7.widget.CardView

    android:layout_centerInParent="true"
  android:elevation="@dimen/padding_10"
    android:layout_marginLeft="@dimen/text_margin20"
    android:layout_marginRight="@dimen/text_margin20"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBgTransparent"
    >
    <LinearLayout
        android:background="@color/colorBgTransparent"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">




        <TextView
            android:background="@color/colorPrimary"
          android:padding="@dimen/padding_10"
            android:textSize="@dimen/text_default"
            android:id="@+id/loading_txt"
            android:textColor="@color/Black"
            android:text="@string/finding_driver"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"


            />

        <ProgressBar
            android:background="@color/colorPrimary"
            android:layout_gravity="center"
            android:id="@+id/progressBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

           />



        <TextView
          android:padding="@dimen/padding_10"
         android:background="@color/colorBgTransparent"
            android:layout_marginTop="10dp"
            android:textSize="@dimen/text_default"
            android:id="@+id/cancel"
            android:textColor="@color/red"
            android:text="@string/profile_cancel_btn"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            />














    </LinearLayout>


</android.support.v7.widget.CardView>
</RelativeLayout>