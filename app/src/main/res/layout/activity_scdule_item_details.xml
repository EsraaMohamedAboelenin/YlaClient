<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">
    <include layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/include"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".2"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/text_margin15"
                android:layout_marginLeft="@dimen/text_padding"
                android:layout_marginBottom="@dimen/text_margin15">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginLeft="@dimen/padding_default"
                    android:id="@+id/history_date"
                    android:textSize="@dimen/text_default"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/padding_default">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/iam_here"
                        android:tint="#3AAD07"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:textSize="@dimen/text_default"
                        android:layout_gravity="center"
                        android:textColor="#3A3A3A"
                        android:id="@+id/history_iam_here_address"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="-8dp"
                    android:id="@+id/history_iam_here"

                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/dashline"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/text_padding"

                        android:layout_gravity="top"
                        android:textSize="@dimen/text_small"
                        android:id="@+id/history_iam_here_address_details"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="-8dp"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/where"
                        android:tint="#3AAD07"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_gravity="center"
                        android:textColor="#3A3A3A"
                        android:textSize="@dimen/text_default"
                        android:id="@+id/history_where_address"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="-5dp"
                    android:layout_marginLeft="@dimen/text_margin30"

                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_gravity="top"
                        android:textSize="@dimen/text_small"
                        android:id="@+id/history_where_address_details"

                        />
                </LinearLayout>
                 <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/text_margin15"
                    android:layout_marginLeft="@dimen/text_margin15"
                    android:layout_marginRight="@dimen/text_margin15"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_default"
                        android:text="@string/payment"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:textSize="@dimen/text_small"
                        android:textColor="#1E1E1E"
                        android:id="@+id/payment_txt_item_details"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="@dimen/text_padding"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/text_margin15"
                    android:layout_marginRight="@dimen/text_margin15"
                    android:background="@color/textColorPrimary"></LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/text_margin15"
                    android:layout_marginLeft="@dimen/text_margin15"
                    android:layout_marginRight="@dimen/text_margin15"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/car_type"
                        android:textSize="@dimen/text_default"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:textSize="@dimen/text_small"
                        android:textColor="#1E1E1E"
                        android:gravity="left"
                        android:layout_gravity="left"
                        android:id="@+id/car_type_txt_item_details"/>
                </LinearLayout>
               </LinearLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>

