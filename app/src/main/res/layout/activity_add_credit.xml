<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_credit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="solversteam.familycab.Activities.Add_credit">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include
            layout="@layout/toolbar"
            android:id="@+id/toolbar"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/bgLayoutBorderColor"
            android:paddingTop="@dimen/text_margin20">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    ></LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/text_padding"
                    >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@mipmap/visa"
                        />
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@mipmap/pyoneer"
                        />
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@mipmap/master"
                        />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/text_padding"
                android:layout_marginLeft="@dimen/text_margin20"
                android:layout_marginRight="@dimen/text_padding"
                android:padding="@dimen/text_padding">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/cardnum"
                    android:textSize="@dimen/text_default"
                    />
                <EditText
                    android:background="@color/colorBgTransparent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".7"
                    android:hint="@string/cardnumplz"
                    android:gravity="end"
                    android:inputType="number"
                    android:textSize="@dimen/text_small"
                    android:id="@+id/card_number_edittext"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/textColorPrimary"
                android:layout_marginTop="3dp"
                android:layout_marginStart="@dimen/text_margin20"></LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/text_padding"
                android:layout_marginLeft="@dimen/text_margin20"
                android:layout_marginRight="@dimen/text_padding"
                android:padding="@dimen/text_padding">
                <TextView
                    android:textSize="@dimen/text_default"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/Expiration"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".7"
                    android:hint="@string/yy_mm"
                    android:background="@color/colorBgTransparent"
                    android:gravity="end"
                    android:inputType="date"
                    android:textSize="@dimen/text_small"
                    android:id="@+id/expiration_date_edittext"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/textColorPrimary"
                android:layout_marginTop="3dp"
                android:layout_marginStart="@dimen/text_margin20"></LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/text_padding"
                android:layout_marginLeft="@dimen/text_margin20"
                android:layout_marginRight="@dimen/text_padding"
                android:padding="@dimen/text_padding">
                <TextView
                    android:textSize="@dimen/text_default"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/cvv"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".7"
                    android:hint="@string/cvv"
                    android:background="@color/colorBgTransparent"
                    android:gravity="end"
                    android:textSize="@dimen/text_small"
                    android:inputType="number"
                    android:id="@+id/cvv_edittext"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/textColorPrimary"
                android:layout_marginTop="3dp"
                android:layout_marginStart="@dimen/text_margin20"></LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/text_padding"
                android:layout_marginLeft="@dimen/text_margin20"
                android:layout_marginRight="@dimen/text_padding"
                android:padding="@dimen/text_padding">
                <TextView
                    android:textSize="@dimen/text_default"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/cardname"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".7"
                    android:hint="@string/name"
                    android:background="@color/colorBgTransparent"
                    android:gravity="end"
                    android:textSize="@dimen/text_small"
                    android:id="@+id/cardholder_name_edittext"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/textColorPrimary"
                android:layout_marginTop="3dp"
                android:layout_marginStart="@dimen/text_margin20"></LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/text_padding"
                android:padding="@dimen/text_padding"
                android:layout_marginLeft="@dimen/text_margin20"
                android:layout_marginRight="@dimen/text_padding">
                <TextView
                    android:textSize="@dimen/text_default"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/country"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".7"
                    android:orientation="horizontal"
                    android:gravity="end"
                    android:id="@+id/country_container_linear">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="@dimen/text_padding"
                        android:hint="Egypt"
                        android:textSize="@dimen/text_small"
                        android:id="@+id/country_name_textview"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/egypt"
                        android:id="@+id/country_image_imageview"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/textColorPrimary"
                android:layout_marginTop="3dp"
                ></LinearLayout>

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:text="@string/msgcredit"
            android:layout_margin="@dimen/text_margin30"
            android:padding="@dimen/text_padding"
            android:textSize="@dimen/text_xsmall"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/text_padding"
            android:background="@color/textColorPrimary"
            android:layout_marginRight="@dimen/text_margin20"
            android:layout_marginLeft="@dimen/text_margin20"
            android:layout_gravity="center"
            android:gravity="center"
            >
            <TextView
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/addcreditmsg2"
                android:drawableStart="@drawable/lock"
                android:textColor="@color/bgLayoutColor"
                android:textSize="@dimen/text_xsmall"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
