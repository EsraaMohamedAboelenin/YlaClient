<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1.5dp"
    android:id="@+id/cv">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".2"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/text_margin15"
            android:layout_marginLeft="@dimen/text_padding"
            android:layout_marginBottom="@dimen/text_margin15">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="16 Apr, 07:13 PM"
                android:layout_marginLeft="@dimen/padding_5"
                android:id="@+id/history_date"
                android:textSize="@dimen/text_default"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/padding_5">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/iam_here"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="EL Eshren"
                    android:textSize="@dimen/text_default"
                    android:layout_gravity="center"
                    android:textColor="#3A3A3A"
                    android:id="@+id/history_iam_here_address"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="-8dp"
                android:id="@+id/history_iam_here"
                 >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/dashline"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="EL Eshren"
                    android:id="@+id/history_iam_here_address_details"
                    android:layout_gravity="top"
                    android:textSize="@dimen/text_small"
                    android:visibility="gone"
                     />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="-8dp"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/where"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cairo Festival City"
                    android:layout_gravity="center"
                    android:textColor="#3A3A3A"
                    android:id="@+id/history_where_address"
                    android:textSize="@dimen/text_default"
                     />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="-5dp"
                android:layout_marginLeft="@dimen/text_margin30"

                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="New Cairo - Cairo"
                    android:layout_gravity="top"
                    android:textSize="@dimen/text_small"
                    android:id="@+id/history_where_address_details"
                    android:visibility="gone"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".6">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_marginRight="@dimen/text_margin15">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/warning"
                        android:tint="#FFFF00"
                        android:id="@+id/warning_img"
                        android:layout_weight="1"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="EGP 10"
                        android:id="@+id/cost_text"
                        android:gravity="right"
                        android:textSize="@dimen/text_default"
                        android:layout_weight=".4"/>
                </LinearLayout>
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cancelled"
                    android:id="@+id/cancel_text"
                    android:textSize="@dimen/text_default"
                    android:gravity="right"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
