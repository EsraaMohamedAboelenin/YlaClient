<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/toolbar"

        android:id="@+id/include"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                      android:layout_marginTop="@dimen/text_margin15"
                    android:layout_marginLeft="@dimen/text_margin15"
                    android:layout_marginRight="@dimen/text_padding"
                    android:background="@color/colorNavigationViewLine"

                    >
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/rate_city"
                    android:padding="@dimen/text_margin15"
                    android:gravity="center"
                    
                    ></Spinner>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                     android:layout_marginTop="@dimen/text_margin15"
                    android:layout_marginRight="@dimen/text_margin15"
                    android:layout_marginLeft="@dimen/text_padding"                    android:background="@color/colorNavigationViewLine"
                    >
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/rate_car_type"
                    android:padding="@dimen/text_margin15"
                    android:gravity="center"

                    android:layout_weight="1"></Spinner></LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/text_margin15">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:textSize="@dimen/text_small"
                    android:text="@string/now"
                    android:textColor="#000"
                    android:gravity="center"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:textSize="@dimen/text_small"
                    android:text="@string/later"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:gravity="center"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="@dimen/text_padding"
                android:background="@color/colorBgTransparent"></LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal">
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:orientation="vertical">
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="@string/starting"
                   android:textSize="@dimen/text_small"
                   android:gravity="center"
                   />
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="4.5"
                   android:textColor="#000"
                   android:gravity="center"
                   android:id="@+id/starting_now_txt"
                   android:textSize="@dimen/text_small"
                   />
           </LinearLayout>
           <LinearLayout
               android:layout_width="1dp"
               android:layout_height="match_parent"
               android:background="@color/colorNavigationViewLine"
               android:layout_margin="@dimen/padding_default"></LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:orientation="vertical">
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="@string/starting"
                   android:gravity="center"
                   android:textSize="@dimen/text_small"
                   />
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="9"
                   android:textColor="#000"
                   android:gravity="center"
                   android:id="@+id/starting_later_txt"
                   android:textSize="@dimen/text_small"
                   />
           </LinearLayout>


       </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/text_margin15">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/min"
                        android:gravity="center"
                        android:textSize="@dimen/text_small"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="10"
                        android:textColor="#000"
                        android:gravity="center"
                        android:id="@+id/min_now_txt"
                        android:textSize="@dimen/text_small"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorNavigationViewLine"
                    android:layout_margin="@dimen/padding_default"></LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/min"
                        android:gravity="center"
                        android:textSize="@dimen/text_small"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="19"
                        android:textColor="#000"
                        android:gravity="center"
                        android:id="@+id/min_later_txt"
                        android:textSize="@dimen/text_small"
                        />
                </LinearLayout>



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="@dimen/text_padding"
                android:background="@color/colorBgTransparent">

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/surch"
                    android:textColor="#000"
                    android:textSize="@dimen/text_small"
                    android:layout_marginTop="@dimen/padding_default"
                    android:layout_marginLeft="@dimen/text_margin15"
                    android:layout_marginRight="@dimen/text_margin15"
                    android:layout_marginBottom="@dimen/padding_default"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="20 EGP"
                    android:gravity="right"
                    android:textColor="#000"
                    android:textSize="@dimen/text_small"
                     android:layout_marginTop="@dimen/padding_default"
                    android:layout_marginLeft="@dimen/text_margin15"
                    android:layout_marginRight="@dimen/text_margin15"
                    android:layout_marginBottom="@dimen/padding_default"
                    android:id="@+id/airport_salary_txt"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="@dimen/text_padding"
                android:background="@color/colorBgTransparent">
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/movepkm"
                    android:textColor="#000"
                    android:textSize="@dimen/text_small"
                    android:layout_marginTop="@dimen/padding_default"
                    android:layout_marginLeft="@dimen/text_margin15"
                    android:layout_marginRight="@dimen/text_margin15"
                    android:layout_marginBottom="@dimen/padding_default"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="1.8 EGP"
                    android:gravity="right"
                    android:textColor="#000"
                    android:textSize="@dimen/text_small"
                    android:layout_marginTop="@dimen/padding_default"
                    android:layout_marginLeft="@dimen/text_margin15"
                    android:layout_marginRight="@dimen/text_margin15"
                    android:layout_marginBottom="@dimen/padding_default"
                    android:id="@+id/moving_km_salary_txt"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/waitphour"
                    android:textColor="#000"
                    android:textSize="@dimen/text_small"
                    android:layout_marginTop="@dimen/padding_default"
                    android:layout_marginLeft="@dimen/text_margin15"
                    android:layout_marginRight="@dimen/text_margin15"
                    android:layout_marginBottom="@dimen/padding_default"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="32 EGP"
                    android:gravity="right"
                    android:textColor="#000"
                    android:textSize="@dimen/text_small"
                    android:layout_marginTop="@dimen/padding_default"
                    android:layout_marginLeft="@dimen/text_margin15"
                    android:layout_marginRight="@dimen/text_margin15"
                    android:layout_marginBottom="@dimen/padding_default"
                    android:id="@+id/waiting_hr_salary_txt"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:layout_gravity="left"
                android:layout_marginLeft="@dimen/text_margin15"
                android:layout_marginRight="@dimen/text_margin15"
                android:layout_marginTop="@dimen/text_padding">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:layout_gravity="left"
                    android:textSize="@dimen/text_small"
                    android:text="*Billed per minute and applies when caris moving below 16km/h. First 3 minutes before trip start is free !"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="@dimen/text_padding"
                android:background="@color/colorBgTransparent">
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/text_margin15"
                android:layout_marginRight="@dimen/text_margin15"
                android:layout_marginBottom="@dimen/text_padding">
                <ImageView
                    android:layout_width="@dimen/text_margin20"
                    android:layout_height="@dimen/text_margin20"
                    android:src="@drawable/dot"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#1e1e1e"
                    android:textSize="@dimen/text_small"
                    android:text="No penalty on NOW booking if canceled within 2 minutes of confirmation"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/text_margin15"
                android:layout_marginRight="@dimen/text_margin15"
                android:layout_marginBottom="@dimen/text_padding">
                <ImageView
                    android:layout_width="@dimen/text_margin20"
                    android:layout_height="@dimen/text_margin20"
                    android:src="@drawable/dot"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#1e1e1e"
                    android:textSize="@dimen/text_small"
                    android:text="No penalty on LATER booking if canceled at least 2 hours before pickup time"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/text_margin15"
                android:layout_marginRight="@dimen/text_margin15"
                android:layout_marginBottom="@dimen/text_padding">
                <ImageView
                    android:layout_width="@dimen/text_margin20"
                    android:layout_height="@dimen/text_margin20"
                    android:src="@drawable/dot"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#1e1e1e"
                    android:textSize="@dimen/text_small"
                    android:text="Minimum fare plus any relevant charges may apply if booking is cancelled after the mentioned time ."/>
            </LinearLayout>
        </LinearLayout>


    </ScrollView>

</LinearLayout>
