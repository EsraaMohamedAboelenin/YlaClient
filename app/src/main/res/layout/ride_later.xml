<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/toolbar"
        android:id="@+id/include"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_above="@+id/container"
            >
            <fragment
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/container"
            android:layout_alignParentBottom="true">
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_default"
                    android:background="#1e1e1e"
                    android:alpha=".9">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="@dimen/text_xsmall"
                        android:padding="@dimen/text_margin2"
                        android:textColor="#fff"
                        android:id="@+id/big_txt_show_date"
                        android:text="Wednesday, May 17th between 01:15-01:30 PM"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="@dimen/text_padding"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Repeat"
                        android:textSize="@dimen/text_title"
                        android:textColor="#1e1e1e"
                        />
                    <Switch
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/textColorPrimary"
                    android:layout_marginTop="@dimen/padding_default"></LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:layout_gravity="left"
                            android:layout_marginTop="@dimen/text_margin2"
                            android:id="@+id/ride_later_month_txt"
                            android:visibility="invisible"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="center"
                            android:gravity="center"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="sun\n14/5"
                                android:background="@drawable/circle"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:layout_margin="@dimen/text_margin2"
                                 android:id="@+id/first_day"
                                android:textSize="@dimen/text_xsmall"
                                android:padding="@dimen/padding_default"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="sun\n14"
                                android:background="@drawable/circle"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:padding="@dimen/padding_default"
                                android:layout_margin="@dimen/text_margin2"
                                android:id="@+id/sec_day"
                                android:textSize="@dimen/text_xsmall"

                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="sun\n14"
                                android:background="@drawable/circle"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:padding="@dimen/padding_default"
                                android:layout_margin="@dimen/text_margin2"
                                android:id="@+id/third_day"
                                android:textSize="@dimen/text_xsmall"

                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="sun\n14"
                                android:background="@drawable/circle"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:layout_margin="@dimen/text_margin2"
                                android:id="@+id/forth_day"
                                android:padding="@dimen/padding_default"
                                android:textSize="@dimen/text_xsmall"

                                />
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/circle"
                                android:layout_gravity="center"
                                android:gravity="center"
                                >
                                
                            
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/get_clander"
                                android:padding="@dimen/padding_default"
                                android:layout_gravity="center"
                                android:layout_margin="@dimen/text_margin2"
                                android:id="@+id/get_calender"
                                

                                /></LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/textColorPrimary"
                    android:layout_marginTop="@dimen/text_margin15"></LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/text_margin15"
                    android:id="@+id/get_clock">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="01:15"
                        android:layout_weight=".5"
                        android:layout_gravity="right"
                        android:gravity="right"
                        android:textSize="@dimen/text_default"
                        android:textColor="#1e1e1e"
                        android:id="@+id/time_start"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="-"
                        android:layout_weight=".8"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_horizontal"
                        android:textSize="@dimen/text_default"
                        android:textColor="#1e1e1e"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="01:15"
                        android:layout_weight=".75"
                        android:layout_gravity="left"
                        android:textSize="@dimen/text_default"
                        android:textColor="#1e1e1e"
                        android:id="@+id/time_later"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="PM"
                        android:layout_weight=".5"
                        android:layout_gravity="left"
                        android:textSize="@dimen/text_default"
                        android:textColor="#1e1e1e"
                        android:id="@+id/time_am_pm"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/text_margin15">
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#fff"
                        android:textSize="@dimen/text_default"
                        android:background="@color/colorPrimary"
                        android:text="@string/save"
                        android:layout_gravity="bottom"
                        android:id="@+id/save_btn"
                        android:padding="@dimen/padding_default"


                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>