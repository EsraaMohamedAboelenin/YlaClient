<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="@dimen/text_margin2">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/send_from_container"
        android:layout_gravity="left">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="@dimen/text_margin2"
            android:src="@drawable/prof_placeholder"
            android:id="@+id/sender_image"
            android:visibility="gone"/>

        <TextView
            android:gravity="start"
            android:id="@+id/chat_item_buble_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:background="@drawable/incoming_message"
            android:paddingBottom="@dimen/text_margin15"
            android:paddingLeft="@dimen/text_margin20"
            android:paddingRight="@dimen/text_margin15"
            android:paddingTop="@dimen/text_margin15"
            android:text="hgfkljljlkfjklfjljfljfljflj" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/outcoming_message"
        android:layout_gravity="right"
        >
        <TextView
            android:layout_gravity="right"
            android:gravity="start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hgfkljljlkfjklfjljfljfljflj"
            android:paddingLeft="@dimen/text_margin15"
            android:paddingBottom="@dimen/text_margin15"
            android:paddingTop="@dimen/text_margin15"
            android:paddingRight="@dimen/text_margin20"
            android:id="@+id/chat_item_buble_in"/>
    </LinearLayout>
</LinearLayout>
