<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/issues_container_linear"
        android:background="@drawable/item_clicked"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="7">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/alert_image"
                android:layout_gravity="center"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="@dimen/text_margin2"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/issue_date"
                android:text="2 oct 2017"
                android:textSize="@dimen/text_padding"
                android:gravity="left"
                />
            <TextView
                android:layout_marginTop="@dimen/text_margin2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/issue_hidder"
                android:text="GitHug"
                android:gravity="left"
                android:textColor="@color/Black"
                android:textSize="@dimen/text_default"
                />
            <TextView
                android:layout_marginTop="@dimen/text_margin2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/issue_message"
                android:text="githug issue for Android "
                android:textSize="@dimen/text_padding"
                android:maxLines="2"
                android:minLines="2"
                android:gravity="center_vertical|left"
                />
        </LinearLayout>

    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="1dp"
            android:background="@color/wallet_dim_foreground_holo_dark"
            android:layout_height="1dp"></LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>
