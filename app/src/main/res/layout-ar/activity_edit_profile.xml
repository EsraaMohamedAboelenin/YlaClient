<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.edit_profile"
    android:orientation="vertical">
    <TextView
        android:layout_margin="@dimen/padding_default"
        android:padding="@dimen/text_padding"
        android:textColor="@color/textColorSec"
        android:textSize="@dimen/text_default"
        android:text="@string/reg_Username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText

        android:id="@+id/user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_default"
        android:background="@drawable/bg_reg_login_layout_border"
        android:gravity="start"

        android:inputType="text"
        android:padding="@dimen/text_padding"
        android:textColor="@color/textColorSec"

        android:textSize="@dimen/text_default" />
    <TextView
        android:layout_margin="@dimen/padding_default"
        android:padding="@dimen/text_padding"
        android:textColor="@color/textColorSec"
        android:textSize="@dimen/text_default"
        android:text="@string/reg_Email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/reg_email_Tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_default"
        android:background="@drawable/bg_reg_login_layout_border"
        android:gravity="start"
        android:hint="@string/reg_mail"
        android:inputType="textEmailAddress"
        android:padding="@dimen/text_padding"
        android:textColor="@color/textColorSec"
        android:textColorHint="@color/textColorPrimary"
        android:textSize="@dimen/text_default" />

    <TextView
        android:id="@+id/selected_country"
        android:layout_margin="@dimen/padding_default"
        android:padding="@dimen/text_padding"
        android:textColor="@color/textColorSec"
        android:textSize="@dimen/text_default"

        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <AutoCompleteTextView
        android:id="@+id/reg_country_Tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="@dimen/padding_default"
        android:layout_marginBottom="@dimen/text_margin2"
        android:background="@drawable/bg_reg_login_layout_border"
        android:cursorVisible="false"
        android:drawableRight="@drawable/arrow_black"

        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="start|center"
        android:hint="@string/reg_country"
        android:inputType="textNoSuggestions"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/text_margin2"
        android:paddingLeft="@dimen/text_padding"
        android:paddingRight="@dimen/text_padding"
        android:paddingTop="@dimen/text_margin2"
        android:textColor="@color/textColorSec"
        android:textColorHint="@color/textColorPrimary"
        android:textSize="@dimen/text_default"

        />

    <TextView
        android:id="@+id/selected_state"
        android:layout_margin="@dimen/padding_default"
        android:padding="@dimen/text_padding"
        android:textColor="@color/textColorSec"
        android:textSize="@dimen/text_default"

        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <AutoCompleteTextView
        android:id="@+id/reg_state_Tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="@dimen/padding_default"
        android:layout_marginBottom="@dimen/text_margin2"
        android:background="@drawable/bg_reg_login_layout_border"
        android:cursorVisible="false"
        android:drawableRight="@drawable/arrow_black"

        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="start|center"
        android:hint="@string/choose_state"
        android:inputType="textNoSuggestions"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/text_margin2"
        android:paddingLeft="@dimen/text_padding"
        android:paddingRight="@dimen/text_padding"
        android:paddingTop="@dimen/text_margin2"
        android:textColor="@color/textColorSec"
        android:textColorHint="@color/textColorPrimary"
        android:textSize="@dimen/text_default"

        />





    <TextView
        android:layout_margin="@dimen/padding_default"
        android:padding="@dimen/text_padding"
        android:textColor="@color/textColorSec"
        android:textSize="@dimen/text_default"
        android:text="@string/reg_Phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/reg_phoneNumber_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/padding_default"
            android:background="@drawable/bg_reg_login_layout_border"
            android:gravity="start|center"
            android:orientation="horizontal"
            android:weightSum="5">

            <LinearLayout
                android:id="@+id/phone_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/text_margin2"
                android:background="@color/bgLayoutBorderColor"
                android:orientation="horizontal"
                >

                <ImageView
                    android:id="@+id/flag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:paddingStart="@dimen/text_margin2" />

                <TextView
                    android:id="@+id/post_code_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawablePadding="@dimen/padding_3"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/padding_3"
                    android:text=""
                    android:textSize="@dimen/text_small"

                    />


            </LinearLayout>
            <EditText
                android:id="@+id/reg_phoneNumber_Tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_default"
                android:layout_marginRight="@dimen/padding_default"
                android:background="#00000000"
                android:gravity="start"
                android:hint="@string/reg_Phone"
                android:inputType="phone"
                android:padding="@dimen/text_padding"

                android:textColor="@color/textColorSec"
                android:textColorHint="@color/textColorPrimary"
                android:textSize="@dimen/text_default"

                />
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin15"
        android:background="@color/colorButtonSec"
        android:gravity="center"
        android:padding="@dimen/text_padding"
        android:text="@string/save"
        android:textColor="@color/textColorPrimary"
        android:textSize="@dimen/text_default"
        android:textStyle="bold" />
</LinearLayout>