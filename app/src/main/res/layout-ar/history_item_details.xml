<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">
    <include layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/include"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".2"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/text_margin15"
                android:layout_marginRight="@dimen/text_padding"
                android:layout_marginBottom="@dimen/text_margin15">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:gravity="right"
                    android:layout_marginRight="@dimen/padding_default"
                    android:textSize="@dimen/text_default"
                    android:id="@+id/history_date"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/padding_default">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/iam_here"
                        android:tint="#3AAD07"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:gravity="right"
                        android:textSize="@dimen/text_default"
                        android:layout_gravity="center"
                        android:textColor="#3A3A3A"
                        android:id="@+id/history_iam_here_address"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="-8dp"
                    android:id="@+id/history_iam_here"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/dashline"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:gravity="right"
                        android:textSize="@dimen/text_small"
                        android:layout_gravity="top"
                        android:id="@+id/history_iam_here_address_details"

                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="-8dp"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/where"
                        android:tint="#3AAD07"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_gravity="center"
                        android:textColor="#3A3A3A"
                        android:gravity="right"
                        android:id="@+id/history_where_address"
                        android:textSize="@dimen/text_default"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="-5dp"
                    android:layout_marginRight="@dimen/text_margin30"
                    android:visibility="gone"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_gravity="top"
                        android:gravity="right"
                        android:textSize="@dimen/text_small"
                        android:id="@+id/history_where_address_details"

                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="@dimen/text_margin20"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginRight="@dimen/text_margin15"
                    android:layout_marginLeft="@dimen/text_margin15"
                    android:background="@color/textColorPrimary"></LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/text_padding"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginRight="@dimen/text_margin15">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/duration"
                            android:textSize="@dimen/text_default"
                            />
                        <TextView
                            android:layout_marginTop="@dimen/padding_default"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:gravity="right"
                            android:textColor="#1E1E1E"
                            android:textSize="@dimen/text_small"
                            android:id="@+id/duration_txt_item_details"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/text_margin15"
                        android:layout_marginRight="@dimen/text_margin15"
                        android:background="@color/textColorPrimary">

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginRight="@dimen/text_margin15">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/car_type"
                            android:textSize="@dimen/text_default"
                            />
                        <TextView
                            android:layout_marginTop="@dimen/padding_default"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:gravity="right"
                            android:textColor="#1E1E1E"
                            android:textSize="@dimen/text_small"
                            android:id="@+id/car_type_txt_item_details"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="@dimen/text_margin20"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginRight="@dimen/text_margin15"
                    android:layout_marginLeft="@dimen/text_margin15"
                    android:background="@color/textColorPrimary"></LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/text_padding"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginRight="@dimen/text_margin15">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/distance"
                            android:textSize="@dimen/text_default"
                            />
                        <TextView
                            android:layout_marginTop="@dimen/padding_default"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:gravity="right"
                            android:textSize="@dimen/text_small"
                            android:textColor="#1E1E1E"
                            android:id="@+id/distance_txt_item_details"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/text_margin15"
                        android:layout_marginRight="@dimen/text_margin15"
                        android:background="@color/textColorPrimary">

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginRight="@dimen/text_margin15">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/wait_time"
                            android:textSize="@dimen/text_default"
                            />
                        <TextView
                            android:layout_marginTop="@dimen/padding_default"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:textSize="@dimen/text_small"
                            android:textColor="#1E1E1E"
                            android:gravity="right"
                            android:id="@+id/wait_time_txt_item_details"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="@dimen/text_padding"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/text_margin15"
                    android:layout_marginRight="@dimen/text_margin15"
                    android:background="@color/textColorPrimary"></LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/text_margin15"
                    android:layout_marginLeft="@dimen/text_margin15"
                    android:layout_marginRight="@dimen/text_margin15"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/fare"
                        android:textSize="@dimen/text_default"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:textSize="@dimen/text_small"
                        android:textColor="#1E1E1E"
                        android:id="@+id/fare_txt_item_details"
                        android:gravity="right"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="@dimen/text_padding"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/text_margin15"
                    android:layout_marginRight="@dimen/text_margin15"
                    android:background="@color/textColorPrimary"></LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/text_margin15"
                    android:layout_marginLeft="@dimen/text_margin15"
                    android:layout_marginRight="@dimen/text_margin15"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/payment"
                        android:textSize="@dimen/text_default"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:textSize="@dimen/text_small"
                        android:textColor="#1E1E1E"
                        android:gravity="right"
                        android:id="@+id/payment_txt_item_details"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="@dimen/text_padding"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/text_margin15"
                    android:layout_marginRight="@dimen/text_margin15"
                    android:background="@color/textColorPrimary"></LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/text_margin15"
                    android:layout_marginLeft="@dimen/text_margin15"
                    android:layout_marginRight="@dimen/text_margin15"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/captain"
                        android:textSize="@dimen/text_default"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:textSize="@dimen/text_small"
                        android:textColor="#1E1E1E"
                        android:gravity="right"                 
                         android:id="@+id/captain_name_txt_item_details"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="@dimen/text_padding"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/text_margin15"
                    android:layout_marginRight="@dimen/text_margin15"
                    android:background="@color/textColorPrimary"></LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/text_padding"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginRight="@dimen/text_margin15">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/car"
                            android:textSize="@dimen/text_default"
                            />
                        <TextView
                            android:layout_marginTop="@dimen/padding_default"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:textSize="@dimen/text_small"
                            android:textColor="#1E1E1E"
                            android:gravity="right"
                            android:id="@+id/car_txt_item_details"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/text_margin15"
                        android:layout_marginRight="@dimen/text_margin15"
                        android:background="@color/textColorPrimary">

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginRight="@dimen/text_margin15">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/plate_num"
                            android:textSize="@dimen/text_default"
                            />

                        <TextView
                            android:layout_marginTop="@dimen/padding_default"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:textSize="@dimen/text_small"
                            android:textColor="#1E1E1E"
                            android:layout_gravity="left"
                            android:gravity="right"                            
                            android:id="@+id/plate_no_txt_item_details"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>

